{
  "name": "ESPN Fantasy Baseball Plus",
  "version": "0.1.0",
  "description": "more espn fantasy baseball stats",
  "manifest_version": 3,
  "author": "Robert Ceglie",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://fantasy.espn.com/baseball/*"],
      "js": ["content.js", "popup.js", "stats.js", "mapping.js"]
    }
  ],
  "action": {
    "default_popup": "index.html"
  },
  "host_permissions": ["*://*/*"],
  "permissions": ["storage", "tabs", "scripting", "activeTab", "webNavigation"],
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": ["stats.js", "mapping.js"]
    }
  ]
}
